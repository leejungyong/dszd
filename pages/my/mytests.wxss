/* pages/my/mytests.wxss */
page{
  background: #121A21;
}
.swiper swiper{
  height: 184px;
  width: 100%;
}
swiper image {
  width: 100%;
  height: 100%;
}
.navbar{
  height: 100rpx;
  line-height: 100rpx;
  color: #aaa;
}

.navbar{
  flex: none;
  display: flex;
  background: #121a21;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
  height: 90rpx;
  box-sizing: border-box;
}
.navbar .item.active{
  color: #D0A258;
  border-bottom: 4rpx solid #D0A258;
}
.list-box{
  padding: 0 40rpx;
  height: 800rpx;
  overflow-y: scroll;
}
.card{
    width: 660rpx;
    height: 120rpx;
    /* line-height: 120rpx; */
    border-radius: 10rpx;
    background-color: rgba(28, 48, 67, 1);
    border: 1rpx solid rgba(70, 96, 125, 1);
    margin-top: 20rpx;
    color: #aaa;
    padding: 10rpx 10rpx;
}
.card .cover image{
  width: 120rpx;
  height: 100rpx;
}
.card .cover{
  height: 100%;
  padding: 10rpx;
}
.card .right{
  margin-left: 20rpx;
  /* width: 400rpx; */
}
.card .right .name{
  color: #D0A258;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
}
.date{
  display: inline-block;
  font-size: 26rpx;
  width: 200rpx;
}
.card .apply{
  font-size: 26rpx;
  display: flex;
  width: 300rpx;
  /* height: 60rpx; */
  /* line-height: 60rpx; */
}
.card .apply text{
flex: 1;
text-align: center;
}

.point{
  color: #D0A258;
  font-size: 26rpx;
  width: 270rpx;
text-align: right;
}

.creat{
  height: 105rpx;
  width: 100%;
  line-height: 105rpx;
  border-top: 1rpx solid var(--yellow);
  background-color: var(--background-black);
  color: var(--yellow);
  font-size: 30rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
}