/* pages/game/accountant.wxss */

page{
  background: #121a21;
  text-align: center;
}
.rest{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  background: #233142;
  border-bottom: 1rpx dashed #aaa;
}
.rest .item{
  width: 50%;
  display: inline-block;
  color: #EDEDED;
  border-bottom: 1rpx dashed #aaa;
  box-sizing: border-box;
}
.money{
  height: 90rpx;
  width: 100%;
  line-height: 90rpx;
  background: #233142;
}
.money .item{
   width: 50%;
  display: inline-block;
  color: #EDEDED;
  box-sizing: border-box;
}

.poi-box {
  width: 90%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin: 60rpx auto 0 auto;
}

.poi-box .poi {
  width: 90rpx;
  height: 90rpx;
  background-color: rgba(255, 255, 255, 0);
  text-align: center;
  border: 1rpx solid rgba(0, 160, 233, 1);
  color: #00a0e9;
  margin: 0 4rpx 4rpx 0;
}
.bottom{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: var(--yellow);
  position: fixed;
  bottom: 0;
  left: 0;
  background: var(--blue);
}
.com{
  display: inline-block;
  width: 50%;
  box-sizing: border-box;
}
.nav{
  width: 100%;
  height: 90rpx;
  background-color: rgba(28, 45, 62, 1);
  /* padding: 0 40rpx; */
  /* overflow: scroll; */
}
.scroll-view-demo {
  width: 100%;
  white-space: nowrap;
}
.scroll-view-demo .item{
  color: var(--yellow);
  /* width: 120rpx; */
  width: 20%;
  height: 90rpx;
  box-sizing: border-box;
  line-height: 90rpx;
  text-align: center;
  display: inline-block;
}

.scroll-view-demo .active{
  color: #EDEDED;
  border-bottom: 2rpx solid #EDEDED;
}
.list{
  height: 800rpx;
  overflow: scroll;
}
.list .record{
  margin-top: 10rpx;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  background-color: var(--blue);
}
.list .date{
  width: 30%;
  display: inline-block;
}
.list .event{
  width: 40%;
  display: inline-block;
  text-align: left;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list .detail{
  width: 30%;
  display: inline-block;
}