/* pages/game/auction.wxss */
page{
  background: var(--background-black);
}
.poi-box {
  width: 90%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin: 20rpx auto 0 auto;
}

.poi-box .poi {
  width: 90rpx;
  height: 90rpx;
  background-color: rgba(255, 255, 255, 0);
  text-align: center;
  border: 1rpx solid rgba(0, 160, 233, 1);
  color: #00a0e9;
  margin: 0 4rpx 4rpx 0;
}
.poi-box .poi .teams{

  width: 20rpx;
  height: 20rpx;
  float: left;
margin: 2rpx;

}
.bottom{
  width: 100%;
  background-color: #233142;
  position: fixed;
  left: 0;
  bottom: 0;
}
 .showrecord{
  color: #fff;
  font-size: 32rpx;
  width: 90%;
  margin: 0 auto;
  height: 360rpx;
  overflow-y: scroll;
}
.info{
  color: red;
  font-size: 40rpx;
  width: 90%;
  margin: 20rpx auto 0 auto;
}
.info .i{
  width: 50%;
  display: inline-block;
}
.scroll-view-demo{
  color: #fff;
  height: 300rpx;
  width: 90%;
  margin: 0 auto;
  padding-bottom: 10rpx;
}
.scroll-view-demo .item{
  
}
.bottom .send{
   color: #D0A258;
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #1c3043;
  text-align: center;
  background-color: rgba(28, 48, 67, 1);
  border: 2rpx solid #D0A258;
  margin: 20rpx 0 20rpx 20rpx;
  
}
.bottom .input-m{
  width: 520rpx;
  height: 75rpx;
  line-height: 75px;
  border-radius: 5rpx;
  background-color: rgba(237, 237, 237, 1);
  margin:20rpx 0 20rpx 20rpx; 
  padding-left: 30rpx;
}