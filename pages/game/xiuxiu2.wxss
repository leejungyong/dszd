/* 保持大小不变的小圆圈 何问起 */

.dot {
  position: absolute;
  width: 92px;
  height: 92px;
  left: 50%;
  top: 40%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border: 2px solid #d0a258;
  border-radius: 50%;
  z-index: 2;
  margin: -46px 0 0 -46px;
  box-sizing: border-box;
}

