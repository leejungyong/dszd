/**index.wxss**/
page{
  background: #121A21;
}
.swiper swiper{
  height: 184px;
  width: 100%;
}
swiper image {
  width: 100%;
  height: 100%;
}
.navbar{
  height: 100rpx;
  line-height: 100rpx;
  color: #aaa;
}

.navbar{
  flex: none;
  display: flex;
  background: #121a21;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
  height: 90rpx;
  box-sizing: border-box;
}
.navbar .item.active{
  color: #D0A258;
  border-bottom: 4rpx solid #D0A258;
}
.search{
  width:150rpx;
  line-height:90rpx;
  text-align:center;
}

.list{
  padding: 0 60rpx 40rpx 60rpx;
}
.list .item{
  width: 630rpx;
  height: 360rpx;
  background: url('https://www.wondfun.com/wanba/api/sharepic/1.jpg')no-repeat center center  ;
  background-size: 100% 100%;
  background-color: #121A21;
  margin: 40rpx 0;
}
.bottom{
  width: 100%;
  height: 110rpx;
  border-top: 1rpx solid #D0A258;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  background: #121A21;
  display: flex;
  font-size: 24rpx;
}
.com{
  display: inline-block;
  color: #D0A258;
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
.com image{
  width: 48rpx;
  height: 48rpx;
}
.start-box{
   display: inline-block;
  color: #D0A258;
  flex: 1;
  text-align: center;
  line-height: 110rpx;
}
.start{
  display: inline-block;
  color: #D0A258;
  border-radius: 50%;
  width: 88rpx;
  height: 88rpx;
  border: 1rpx solid #D0A258;
  line-height: 88rpx;
  font-size: 32rpx;
}
.side{
  height: 100%;  
  width: 80%;  
  position: fixed;  
  background-color: #1c3043; 
  top:0;
  right: 0;
  z-index: 999;
  color: #00acfb;
}
/* 遮罩层 */  
.bg {    
  display: none;    
  position: fixed;    
  top: 0%;    
  left: 0%;    
  width: 100%;    
  height: 100%;    
  background-color: black;    
  /* z-index: 1001;     */
  -moz-opacity: 0.7;    
  opacity: 0.70;    
  transition:width 2s;  
  filter: alpha(opacity=70);    
} 
.filterbox{
  padding: 10rpx 10rpx 10rpx 20rpx ;
  border-bottom: 2rpx solid #3a6996;
  margin-top: 10rpx;
}
.minicard{
  border: 2rpx solid #00acfb;
  border-radius: 10rpx;
  display: inline-block;
  padding:6rpx 10rpx;
  margin:15rpx 10rpx;
}
.keySearch{
  border: 2rpx solid #00a0e9;
  color: #00acfb;
  width: 400rpx;
  padding-left:30rpx;
  border-radius: 50rpx;
  height: 60rpx;
}
.f_button{
  width:160rpx;
  height:70rpx;
  line-height:70rpx;
  border-radius: 6px;
  background-color: rgba(28, 48, 67, 1);
  text-align: center;
  border: 2rpx solid rgba(0, 160, 233, 1);
  color: #00acfb;
  float: left;
  margin:60rpx 0rpx 10rpx 80rpx;
}

