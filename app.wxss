/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.clearfix:after{content: ".";display: block;height: 0;clear: both;visibility: hidden;}
/* .clearfix {
  overflow: auto;
  _height: 1%;
} */
.fl{float: left;}
.fr{float: right;}
.btn{
  color: #D0A258;
  width: 240rpx;
  height: 80rpx;
  /* color: #00a0e9; */
  background: #1c3043;
  text-align: center;
  background-color: rgba(28, 48, 67, 1);
  border: 2rpx solid #D0A258;
  font-size: 30rpx;
}
.star::after{
  content: '*';
  color: red;
}
.input{
  width: 630rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  background-color: rgba(28, 48, 67, 1);
  border: 1rpx solid rgba(70, 96, 125, 1);
  padding-left: 20rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
  color: #aaa;
}
.triangle{
  width:16rpx;
  height:16rpx;
  border:#D0A258 solid;
  border-width:2rpx 2rpx 0 0;
  transform:rotate(135deg);
  display:inline-block;
  margin-bottom:6rpx;
  margin-left: 10rpx
}
